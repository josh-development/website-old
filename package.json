{
  "name": "website",
  "version": "1.0.0",
  "workspaces": [
    "projects/*"
  ],
  "description": "Documentation for the Josh project",
  "author": "Ã‰velyne Lachance <eslachance@gmail.com> (https://evie.codes/)",
  "contributors": [
    "Hezekiah Hendry <real.shadow.nova@gmail.com>"
  ],
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "clean": "rimraf dist node_modules/.cache",
    "lint": "eslint src --ext tsx --fix",
    "format": "prettier --write src/**/*.tsx",
    "update": "yarn upgrade-interact --latest",
    "start": "vite",
    "build": "vite build",
    "dev": "yarn build && yarn start",
    "serve": "vite preview",
    "update-submodules": "git pull --recursive-submodules && git submodules update --remote --recursive",
    "prepare": "husky install"
  },
  "dependencies": {
    "solid-js": "^1.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@sapphire/eslint-config": "^4.0.11",
    "@sapphire/ts-config": "^3.1.8",
    "@types/node": "^17.0.12",
    "@types/tailwindcss": "^3.0.3",
    "autoprefixer": "^10.4.2",
    "eslint": "~8.6.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.2",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.0.17",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "vite-plugin-solid": "^2.2.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/josh-development/website.git"
  },
  "bugs": {
    "url": "https://github.com/josh-development/website/issues"
  },
  "homepage": "https://github.com/josh-development/website",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix --ext ts"
  }
}
